<div class="container text-center d-flex" style="max-height: 100%">

  <div class="side-bar-left col-sm-3 mw-100">
    <div class="logo">
      <%= render inline: Rails.root.join('public/moon-garden-logo.svg').read %>
    </div>
  </div>

  <div class="dash-main-bar col-sm-10" style="max-height: 100%">
    <%= render partial: "shared/header" %>
    <div class="dash-container">
      <h1>Search Results</h1>
      <% @results.each do |plant| %>
        <div id=<%=plant.name %>>

          <p>Name:
            <%= plant.name %></p>
          <p>Sun Requirements:
            <%= plant.sun_requirements %></p>
          <p>Sowing Method:
            <%= plant.sowing_method %></p>
          <p>Row Spacing:
            <%= plant.row_spacing %></p>
          <p>Description:
            <%= plant.description %></p>
          <p><%= plant.main_image_path %></p>
          <%= button_to "Add Plant to Garden", "/gardens/#{@garden_id}/plants", params: {plant_api_id: plant.id, plant_name: plant.name}, method: :post, local: true %>
        </div>
      <% end %>
    </div>
  </div>
  <%= render partial: "shared/moon_widget" %>
</div>