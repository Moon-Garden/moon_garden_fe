<div class="container text-center d-flex" style="max-height: 100%, max-width: 100%">
  <div class="side-bar-left col-sm-3 mw-100">
    <div class="logo">
      <%= render inline: Rails.root.join('public/moon-garden-logo.svg').read %>
    </div>
  </div>

  <div class="dash-main-bar col-sm-10" style="max-height: 100%">

    <%= render partial: "shared/header" %>

    <div class="dash-container">
      <h1>
        Enter Garden Details
      </h1>

      <div class="form-floating">
      <%= form_with url: gardens_path, local:true do |form| %>
      <div class="form-floating">
        <%= form.text_field :name, { class: "form-control" } %>
        <%= form.label "Garden Name" %>
      </div>

      <div class="form-floating">
        <%= form.text_area :notes, { class: "form-control" } %>
        <%= form.label "Notes" %>
      </div>

      <div class="form-floating">
        <%= form.select :cardinal_direction, ['North','South','East', 'West'], {}, class: "form-select", id: "floatingSelect" %>
        <%= form.label "Cardinal Direction", { for: "floatingSelect" } %>
      </div>

      <div class="d-grid gap-2 col-6 mx-auto">
        <%= form.submit class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
    </div>

  </div>
</div>


<%= render partial: "shared/widgets" %>

</div>