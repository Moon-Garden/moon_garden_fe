<div class="container text-center d-flex" style="max-height: 100%">

  <div class="side-bar-left col-sm-3 mw-100">
    <div class="logo">
      <%= render inline: Rails.root.join('public/moon-garden-logo.svg').read %>
    </div>

    <form class="d-flex" role="search">
      <%= form_with url: '/land_acknowledgements', method: :get, local: true do |form| %>
      <div class="form-floating">
        <%= form.text_field :location, { class: "form-control me-2" } %>
        <%= form.label "Enter Your Location" %>
        <div class="d-grid gap-2 d-md-flex justify-content-md-begin">
        <%= form.submit "Search", class: "btn btn-light" %>
        </div>
      <% end %>
      </div>
    <br>
    <div class="card d-flex" style="width: 15rem;">
      <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>
      </div>
    </div>
  </div>

  <div class="dash-main-bar col-sm-10" style="max-height: 100%">
    <%= render partial: "shared/header" %>

    <div class="dash-container">
      <div class="d-flex">
        <iframe allowtransparency="yes" scrolling="no" style="border: 0px solid #FFFFFF; width:850px; height:850px; overflow: hidden;" src="https://native-land.ca/wp-content/themes/Native-Land-Theme/embed/embed.html?maps=languages&position=<%= "#{@ll.coordinates}" %>"></iframe>
      </div>
    </div>
  </div>

  <%= render partial: "shared/moon_widget" %>
</div>